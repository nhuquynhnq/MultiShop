@model IEnumerable<Order>
@{
    ViewBag.Title = "List";
}

<h2>Danh sách đơn hàng</h2>

<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Người nhận</th>
        <th>Ngày đặt</th>
        <th>Tổng tiền</th>
        <th></th>
    </tr>
    @foreach (var o in Model)
    {
        <tr>
            <td>@o.Id</td>
            <td>@o.Receiver</td>
            <td>@o.OrderDate</td>
            <td>@o.Amount</td>
            <td>
                <a href="/Order/Detail/@o.Id">Chi tiết</a>
            </td>
        </tr>
    }
</table>